{
  "manifest_version": 3,
  "name": "Auto Browser Journal",
  "version": "1.0.0",
  "description": "Automatically track and journal your browser activity",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"]
}
